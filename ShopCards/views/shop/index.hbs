
    <div class="container">
        {{# each products}}
        <div class="row">
            {{# each this}}
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{this.imagePath}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">
                            {{this.description}}
                        </p>
                        <div>
                            <div class="price pull-left">{{this.price}}$</div>
                            <a href="#" class="btn btn-primary pull-right">Add to shop cart</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>